<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="@string/selFriend" android:id="@+id/selFriend"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button android:text="@string/btnStart" android:id="@+id/btnStart"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button android:text="@string/btnRegret" android:id="@+id/btnRegret"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <com.eddy.echess.ChessMapView
        android:id="@+id/chessMapView"
        android:layout_width="fill_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:background="#FFFF00"
        />

    <TextView 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         android:textColor="#0C0C0C"
         android:text="@string/yourtrun"
         android:minLines="1"
         android:id="@+id/message"
        />
</LinearLayout>